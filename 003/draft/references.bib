@article{trenberth2002,
  title = {Accuracy of {{Atmospheric Energy Budgets}} from {{Analyses}}},
  author = {Trenberth, Kevin E. and Stepaniak, David P. and Caron, Julie M.},
  year = {2002},
  month = dec,
  journal = {Journal of Climate},
