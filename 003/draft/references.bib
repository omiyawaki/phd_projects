@article{pauluis2010,
  title = {The {{Global Atmospheric Circulation}} in {{Moist Isentropic Coordinates}}},
  author = {Pauluis, Olivier and Czaja, Arnaud and Korty, Robert},
  year = {2010},
  month = jun,
  journal = {Journal of Climate},
  volume = {23},
  number = {11},
  pages = {3077--3093},
  publisher = {{American Meteorological Society}},
  issn = {0894-8755, 1520-0442},
  doi = {10.1175/2009JCLI2789.1},
  abstract = {{$<$}section class="abstract"{$><$}h2 class="abstractTitle text-title my-1" id="d2566e2"{$>$}Abstract{$<$}/h2{$><$}p{$>$}Differential heating of the earth's atmosphere drives a global circulation that transports energy from the tropical regions to higher latitudes. Because of the turbulent nature of the flow, any description of a ``mean circulation'' or ``mean parcel trajectories'' is tied to the specific averaging method and coordinate system. In this paper, the NCEP\textendash NCAR reanalysis data spanning 1970\textendash 2004 are used to compare the mean circulation obtained by averaging the flow on surfaces of constant liquid water potential temperature, or dry isentropes, and on surfaces of constant equivalent potential temperature, or moist isentropes. While the two circulations are qualitatively similar, they differ in intensity. In the tropics, the total mass transport on dry isentropes is larger than the circulation on moist isentropes. In contrast, in midlatitudes, the total mass transport on moist isentropes is between 1.5 and 3 times larger than the mass transport on dry isentropes.{$<$}/p{$><$}p{$>$}It is shown here that the differences between the two circulations can be explained by the atmospheric transport of water vapor. In particular, the enhanced mass transport on moist isentropes corresponds to a poleward flow of warm moist air near the earth's surface in midlatitudes. This low-level poleward flow does not appear in the zonally averaged circulation on dry isentropes, as it is hidden by the presence of a larger equatorward flow of drier air at same potential temperature. However, as the equivalent potential temperature in this low-level poleward flow is close to the potential temperature of the air near the tropopause, it is included in the total circulation on moist isentropes. In the tropics, the situation is reversed: the Hadley circulation transports warm moist air toward the equator, and in the opposite direction to the flow at upper levels, and the circulation on dry isentropes is larger than that on moist isentropes.{$<$}/p{$><$}p{$>$}The relationship between circulation and entropy transport is also analyzed. A gross stratification is defined as the ratio of the entropy transport to the net transport on isentropic surfaces. It is found that in midlatitudes the gross stability for moist entropy is approximately the same as that for dry entropy. The gross stratification in the midlatitude circulation differs from what one would expect for either an overturning circulation or horizontal mixing; rather, it confirms that warm moist subtropical air ascends into the upper troposphere within the storm tracks.{$<$}/p{$><$}/section{$>$}},
  chapter = {Journal of Climate},
  langid = {english}
}

@article{pauluis2016,
  title = {The {{Mean Air Flow}} as {{Lagrangian Dynamics Approximation}} and {{Its Application}} to {{Moist Convection}}},
