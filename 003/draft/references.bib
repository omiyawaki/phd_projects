@article{webster1998,
  title = {Monsoons: {{Processes}}, Predictability, and the Prospects for Prediction},
  shorttitle = {Monsoons},
  author = {Webster, P. J. and Maga{\~n}a, V. O. and Palmer, T. N. and Shukla, J. and Tomas, R. A. and Yanai, M. and Yasunari, T.},
