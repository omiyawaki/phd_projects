@article{pauluis2002,
  title = {Entropy {{Budget}} of an {{Atmosphere}} in {{Radiative}}\textendash{{Convective Equilibrium}}. {{Part I}}: {{Maximum Work}} and {{Frictional Dissipation}}},
  shorttitle = {Entropy {{Budget}} of an {{Atmosphere}} in {{Radiative}}\textendash{{Convective Equilibrium}}. {{Part I}}},
  author = {Pauluis, Olivier and Held, Isaac M.},
  year = {2002},
  month = jan,
  journal = {Journal of Atmospheric Sciences},
  volume = {59},
