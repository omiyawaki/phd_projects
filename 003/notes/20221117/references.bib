@article{jansenTransientEquilibriumResponse2018,
  title = {Transient versus {{Equilibrium Response}} of the {{Ocean}}'s {{Overturning Circulation}} to {{Warming}}},
  author = {Jansen, Malte F. and Nadeau, Louis-Philippe and Merlis, Timothy M.},
  year = {2018},
