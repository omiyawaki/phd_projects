  copyright = {Copyright 2009 by the American Geophysical Union.},
  langid = {english},
  keywords = {climate feedbacks,polar warming amplification},
  annotation = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2009GL040133},
