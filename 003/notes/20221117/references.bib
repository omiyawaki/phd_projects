  langid = {english},
  file = {C\:\\Users\\Osamu Miyawaki\\Zotero\\storage\\I9VSH6M2\\Manabe et al_1991_Transient Responses of a Coupled Ocean–Atmosphere Model to Gradual Changes of.pdf}
}

