@article{smithEddyAmplitudesBaroclinic2007,
  title = {Eddy {{Amplitudes}} in {{Baroclinic Turbulence Driven}} by {{Nonzonal Mean Flow}}: {{Shear Dispersion}} of {{Potential Vorticity}}},
