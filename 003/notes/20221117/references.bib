@article{groomsMesoscaleEddyEnergy2013,
  title = {Mesoscale {{Eddy Energy Locality}} in an {{Idealized Ocean Model}}},
  author = {Grooms, Ian and Nadeau, Louis-Philippe and Smith, K. Shafer},
