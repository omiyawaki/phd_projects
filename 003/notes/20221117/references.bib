  langid = {english},
  file = {C\:\\Users\\Osamu Miyawaki\\Zotero\\storage\\GQP5IEVN\\Hahn et al_2022_Seasonality in Arctic Warming Driven by Sea Ice Effective Heat Capacity.pdf}
}

@article{haineGravitationalSymmetricBaroclinic1998,
