@article{schneiderSelfOrganizationAtmosphericMacroturbulence2006,
  title = {Self-{{Organization}} of {{Atmospheric Macroturbulence}} into {{Critical States}} of {{Weak Nonlinear Eddy}}\textendash{{Eddy Interactions}}},
