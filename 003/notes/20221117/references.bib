@article{butlerSteadyStateAtmosphericCirculation2010,
  title = {The {{Steady-State Atmospheric Circulation Response}} to {{Climate Change}}\textendash like {{Thermal Forcings}} in a {{Simple General Circulation Model}}},
  author = {Butler, Amy H. and Thompson, David W. J. and Heikes, Ross},
