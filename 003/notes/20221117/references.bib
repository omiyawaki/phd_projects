@article{wediBaselineGlobalWeather2020,
  title = {A {{Baseline}} for {{Global Weather}} and {{Climate Simulations}} at 1 Km {{Resolution}}},
  author = {Wedi, Nils P. and Polichtchouk, Inna and Dueben, Peter and Anantharaj, Valentine G. and Bauer, Peter and Boussetta, Souhail and Browne, Philip and Deconinck, Willem and Gaudin, Wayne and Hadade, Ioan and Hatfield, Sam and Iffrig, Olivier and Lopez, Philippe and Maciel, Pedro and Mueller, Andreas and Saarinen, Sami and Sandu, Irina and Quintino, Tiago and Vitart, Frederic},
