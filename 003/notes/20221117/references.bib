  author = {Grotjahn, Richard and Black, Robert and Leung, Ruby and Wehner, Michael F. and Barlow, Mathew and Bosilovich, Mike and Gershunov, Alexander and Gutowski, William J. and Gyakum, John R. and Katz, Richard W. and Lee, Yun-Young and Lim, Young-Kwon and {Prabhat}},
