@article{lorenzUnderstandingMidlatitudeJet2014a,
  title = {Understanding {{Midlatitude Jet Variability}} and {{Change Using Rossby Wave Chromatography}}: {{Poleward-Shifted Jets}} in {{Response}} to {{External Forcing}}},
