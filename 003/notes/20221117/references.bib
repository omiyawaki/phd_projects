@article{chenImpactsCloudRadiativeChanges2021,
  title = {The {{Impacts}} of {{Cloud-Radiative Changes}} on {{Poleward Atmospheric}} and {{Oceanic Energy Transport}} in a {{Warmer Climate}}},
