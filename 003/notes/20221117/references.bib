@article{sloanEffectSeaSurface2001,
  title = {Effect of Sea Surface Temperature Configuration on Model Simulations of ``Equable'' Climate in the {{Early Eocene}}},
  author = {Sloan, L. C. and Huber, M. and Crowley, T. J. and Sewall, J. O. and Baum, S.},
