  author = {Cheng, Wei and MacMartin, Douglas G. and Kravitz, Ben and Visioni, Daniele and Bednarz, Ewa M. and Xu, Yangyang and Luo, Yong and Huang, Lei and Hu, Yongyun and Staten, Paul W. and Hitchcock, Peter and Moore, John C. and Guo, Anboyu and Deng, Xiangzheng},
