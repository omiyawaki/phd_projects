@article{panEvaluationUncertaintiesRegional2001,
  title = {Evaluation of Uncertainties in Regional Climate Change Simulations},
  author = {Pan, Z. and Christensen, J. H. and Arritt, R. W. and Gutowski Jr., W. J. and Takle, E. S. and Otieno, F.},
  year = {2001},
  journal = {Journal of Geophysical Research: Atmospheres},
  volume = {106},
