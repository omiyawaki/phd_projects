  booktitle = {Shallow {{Clouds}}, {{Water Vapor}}, {{Circulation}}, and {{Climate Sensitivity}}},
  author = {Vial, Jessica and Bony, Sandrine and Stevens, Bjorn and Vogel, Raphaela},
