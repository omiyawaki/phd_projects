  shorttitle = {Blocking {{Statistics}} in a {{Varying Climate}}},
  author = {Paradise, Adiv and Rocha, Cesar B. and Barpanda, Pragallva and Nakamura, Noboru},
  year = {2019},
  month = oct,
  journal = {Journal of the Atmospheric Sciences},
  volume = {76},
  number = {10},
  pages = {3013--3027},
  publisher = {{American Meteorological Society}},
