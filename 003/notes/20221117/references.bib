@article{marshallOceanRoleSetting2014,
  title = {The Ocean's Role in Setting the Mean Position of the {{Inter-Tropical Convergence Zone}}},
  author = {Marshall, J. and Donohoe, A. and Ferreira, D. and McGee, D.},
