@article{lorenzPredictingDroughtMonitor2017,
  title = {Predicting the {{U}}.{{S}}. {{Drought Monitor Using Precipitation}}, {{Soil Moisture}}, and {{Evapotranspiration Anomalies}}. {{Part II}}: {{Intraseasonal Drought Intensification Forecasts}}},
  shorttitle = {Predicting the {{U}}.{{S}}. {{Drought Monitor Using Precipitation}}, {{Soil Moisture}}, and {{Evapotranspiration Anomalies}}. {{Part II}}},
