  issn = {1944-8007},
  doi = {10.1029/2012GL052861},
  abstract = {Neoproterozoic, and possibly Paleoproterozoic, glaciations represent the most extreme climate events in post-Hadean Earth, and may link closely with the evolution of the atmosphere and life. According to the Snowball Earth hypothesis, the entire ocean was covered with ice during these events for a few million years, during which time volcanic CO2 increased enough to cause deglaciation. Geochemical proxy data and model calculations suggest that the maximum CO2 was 0.01\textendash 0.1 by volume, but early climate modeling suggested that deglaciation was not possible at CO2 = 0.2. We use results from six different general circulation models (GCMs) to show that clouds could warm a Snowball enough to reduce the CO2required for deglaciation by a factor of 10\textendash 100. Although more work is required to rigorously validate cloud schemes in Snowball-like conditions, our results suggest that Snowball deglaciation is consistent with observations.},
  langid = {english},
  keywords = {climate dynamics,cloud modeling,Neoproterozoic,Snowball Earth},
  annotation = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/2012GL052861},
  file = {C\:\\Users\\Osamu Miyawaki\\Zotero\\storage\\5HFL4GQ2\\Abbot et al_2012_Clouds and Snowball Earth deglaciation.pdf}
}

@article{abbotControlsActivationStrength2009,
  title = {Controls on the {{Activation}} and {{Strength}} of a {{High-Latitude Convective Cloud Feedback}}},
  author = {Abbot, Dorian S. and Tziperman, Eli},
