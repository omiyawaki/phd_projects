@article{vialInterpretationIntermodelSpread2013,
  title = {On the Interpretation of Inter-Model Spread in {{CMIP5}} Climate Sensitivity Estimates},
  author = {Vial, Jessica and Dufresne, Jean-Louis and Bony, Sandrine},
  year = {2013},
