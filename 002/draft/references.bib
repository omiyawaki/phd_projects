@article{sgubin2017,
  title = {Abrupt Cooling over the {{North Atlantic}} in Modern Climate Models},
  author = {Sgubin, Giovanni and Swingedouw, Didier and Drijfhout, Sybren and Mary, Yannick and Bennabi, Amine},
  year = {2017},
