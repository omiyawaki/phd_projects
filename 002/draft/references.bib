@article{sherwood2001,
  title = {A {{Model}} for {{Transport}} across the {{Tropical Tropopause}}},
  author = {Sherwood, Steven C. and Dessler, Andrew E.},
  year = {2001},
  month = apr,
  volume = {58},
  pages = {765--779},
