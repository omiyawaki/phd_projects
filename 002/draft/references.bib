@article{pauluis2002,
  title = {Entropy {{Budget}} of an {{Atmosphere}} in {{Radiative}}\textendash{{Convective Equilibrium}}. {{Part II}}: {{Latent Heat Transport}} and {{Moist Processes}}},
  shorttitle = {Entropy {{Budget}} of an {{Atmosphere}} in {{Radiative}}\textendash{{Convective Equilibrium}}. {{Part II}}},
  author = {Pauluis, Olivier and Held, Isaac M.},
  year = {2002},
