  file = {C\:\\Users\\Osamu Miyawaki\\Sync\\papers\\pdf\\S\\2010\\Water Vapor and the Dynamics of Climate Changes\\Schneider et al_2010_Water Vapor and the Dynamics of Climate Changes.pdf},
