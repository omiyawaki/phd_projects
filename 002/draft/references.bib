@article{emanuel1986,
  title = {An {{Air}}-{{Sea Interaction Theory}} for {{Tropical Cyclones}}. {{Part I}}: {{Steady}}-{{State Maintenance}}},
  shorttitle = {An {{Air}}-{{Sea Interaction Theory}} for {{Tropical Cyclones}}. {{Part I}}},
