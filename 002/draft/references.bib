@article{walden2017,
  title = {Atmospheric Components of the Surface Energy Budget over Young Sea Ice: {{Results}} from the {{N}}-{{ICE2015}} Campaign},
  shorttitle = {Atmospheric Components of the Surface Energy Budget over Young Sea Ice},
  author = {Walden, Von P. and Hudson, Stephen R. and Cohen, Lana and Murphy, Sarah Y. and Granskog, Mats A.},
  year = {2017},
  volume = {122},
  pages = {8427--8446},
  issn = {2169-8996},
  doi = {10.1002/2016JD026091},
  abstract = {The Norwegian young sea ice campaign obtained the first measurements of the surface energy budget over young, thin Arctic sea ice through the seasonal transition from winter to summer. This campaign was the first of its kind in the North Atlantic sector of the Arctic. This study describes the atmospheric and surface conditions and the radiative and turbulent heat fluxes over young, thin sea ice. The shortwave albedo of the snow surface ranged from about 0.85 in winter to 0.72\textendash 0.80 in early summer. The near-surface atmosphere was typically stable in winter, unstable in spring, and near neutral in summer once the surface skin temperature reached 0\textdegree C. The daily average radiative and turbulent heat fluxes typically sum to negative values (-40 to 0 W m-2) in winter but then transition toward positive values of up to nearly +60 W m-2 as solar radiation contributes significantly to the surface energy budget. The sensible heat flux typically ranges from +20\textendash 30 W m-2 in winter (into the surface) to negative values between 0 and -20 W m-2 in spring and summer. A winter case study highlights the significant effect of synoptic storms and demonstrates the complex interplay of wind, clouds, and heat and moisture advection on the surface energy components over sea ice in winter. A spring case study contrasts a rare period of 24 h of clear-sky conditions with typical overcast conditions and highlights the impact of clouds on the surface radiation and energy budgets over young, thin sea ice.},
  annotation = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1002/2016JD026091},
  copyright = {\textcopyright 2017. The Authors.},
  journal = {Journal of Geophysical Research: Atmospheres},
  keywords = {Arctic,radiative fluxes,sea ice,surface energy budget,turbulent fluxes},
  language = {en},
  number = {16}
}

