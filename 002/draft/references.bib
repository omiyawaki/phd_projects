  file = {C\:\\Users\\Osamu Miyawaki\\Sync\\papers\\pdf\\S\\2004\\The Tropopause and the Thermal Stratification in the Extratropics of a Dry\\Schneider_2004_The Tropopause and the Thermal Stratification in the Extratropics of a Dry.pdf},
