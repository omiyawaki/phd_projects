  author = {Jang, Yeon-Soo and Kim, Daehyun and Kim, Young-Ho and Kim, Dong-Hoon and Watanabe, Masahiro and Jin, Fei-Fei and Kug, Jong-Seong},
  year = {2013},
  month = feb,
  volume = {49},
