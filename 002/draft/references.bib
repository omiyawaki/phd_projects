  keywords = {Atmospheric boundary layer,Cold-air outbreak,Downslope wind,Orographic flow,Planetary waves,Polar front jet stream,Polar low,Polar vortex,Synoptic-scale cyclones,Troposphere-stratosphere interactions},
  language = {en},
